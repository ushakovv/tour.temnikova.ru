input[type="password"]
	outline 0
	background transparent
	border 1px solid rgba(255,255,255,0.2)
	box-sizing border-box
	padding 12px 30px
	border-radius 50px
	margin-bottom 20px
	color #fff
	width 100%

.input
	position relative
	display inline-block
	@media mobile
		width 100%
.input .error
	position absolute
	background $red
	color #fff
	padding 6px 20px
	left 50%
	transform translate(-50%,-100%)
	margin-top -10px
	&:after
		content ''
		width: 0;
		height: 0;
		border-style: solid;
		border-width: 10px 10px 0 10px;
		border-color: $red transparent transparent transparent
		position absolute
		bottom -9px
		left 50%
		margin-left -10px

input[type="radio"]
input[type="checkbox"]
	position absolute
	opacity 0
	left 0
	padding 0

.form-checkbox
.form-radio-group
	margin-bottom 3rem
	position relative

.form-checkbox
	label
		display block
		position relative
		padding-left 40px
		font-size 12px
		line-height 18px
		a
			color inherit
			border-bottom 1px solid #bababa
			&:hover
				border-bottom 0

		&:before
			display block
			position absolute
			left 0
			top -1px
			content ''
			width 20px
			height 20px
			border 1px solid rgba(255,255,255,0.2)
			border-radius 4px
	input[type="checkbox"]:checked + label:after
		display block
		position absolute
		left 1px
		top 1px
		content ''
		width 20px
		height 20px
		background url($checkbox) no-repeat center
		background-size 12px

.form-radio-group-item
	display inline-block
	padding-left 30px
	position relative
	margin-right 15px
	label
		color #fff
		cursor pointer
		&:before
			display block
			position absolute
			left 0
			top -4px
			content ''
			width 20px
			height 20px
			border 1px solid rgba(255,255,255,0.2)
			border-radius 50%
	input[type="radio"]:checked + label:after
		display block
		position absolute
		left 7px
		top 4px
		content ''
		width 8px
		height 8px
		background $red
		border-radius 50%

input[type="submit"]
