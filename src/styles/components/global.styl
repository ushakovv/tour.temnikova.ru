.slick-arrow
	border 0
	background transparent
	font-size 0
	//arrows
	&.slick-prev
	&.slick-next
		display block
		background url($slide-arr-l) no-repeat center
		background-size 12px 20px
		width 60px
		height 60px
		position absolute
		top 50%
		left -120px
		margin-top -120px
		cursor pointer
		outline none
		border 1px solid rgba(255,255,255,0.2)
		border-radius 50%
		transition background 0.4s ease border-color 0.4s ease
		@media mobile
			top auto
			bottom -20px
			margin-top 0
			z-index 100
			left 10px
		&:focus
		&::-moz-focus-inner
			outline none
		&:hover
			background-color #fff
			background-image url($slide-arr-l-red)


	&.slick-next
		background-image url($slide-arr-r)
		left auto
		right 2rem
		&:hover
			background-image url($slide-arr-r-red)
	&.slick-disabled
		display none!important

