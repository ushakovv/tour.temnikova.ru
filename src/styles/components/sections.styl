.logo-tetrapak
	display block
	background url($logo-tetrapak) 50% 50% no-repeat
	background-size contain
	opacity 0.2
	text-indent -99999px
	position absolute
	left 0
	width 15rem
	height 15rem
	top -10rem
	@media mobile
		display none

.section-product-pluses .logo-tetrapak
	display none
	@media mobile
		display block
		position static
		margin 0 auto

.logo-komos
	opacity 0.2
	display block
	background url($logo-komos) 50% 50% no-repeat
	background-size contain
	text-indent -99999px
	position absolute
	bottom 20px
	left 0
	width 50px
	height 70px
	@media mobile
		top 35px

.logo-promo
	display flex
	position absolute
	bottom 18px
	right 0
	@media mobile
		right auto
		left 0
		top 150px
		left 50%
		transform translateX(-50%)
		width 180px
	.label
		color rgba(255,255,255,0.2)
		padding-right 10px
		line-height 10px

	a
		display inline-block
		position relative
		top 1px
		text-indent -99999px
		width 88px
		height 21px
		margin-left 10px
		background url('../i/logo-promo.png') 50% 50% no-repeat
		background-size contain
