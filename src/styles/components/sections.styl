.section
	box-sizing border-box
	@media mobile
		height auto!important

/* Section header */
.section-header
	position absolute
	width 100%
	padding 20px 0
	height 90px
	box-sizing border-box
	transition background 0.6s
	z-index 200
	&.fixed
		position fixed
		top 0
		background rgba(25,25,25,0.95)
	@media mobile
		padding 15px 0
		background rgba($dark-gray)!important
		height 70px

.section-header-logo
	position relative
	top 5px
	background url($logo) no-repeat 0 0
	width 89px
	height 29px
	display inline-block
	margin-right 23rem
	@media (max-width: 768px)
		margin-right 10rem

.section-inner
	max-width 130rem
	min-width 100rem
	padding 0 10px
	box-sizing border-box
	margin 0 auto
	position relative
	@media mobile
		min-width 0
		max-width 100%

.section-header-menu
	display inline-block
	vertical-align top
	position relative
	top 16px
	@media mobile
		display none
		position absolute
		top 84px
		left 0
		width 100%
		background $dark-gray
		padding 50px 0
	li
		display inline-block
		font-size 12px
		text-transform uppercase
		font-weight 700
		margin-right 20px
		@media mobile
			display block
			padding 20px 0
			width 100%
			text-align center
		a:hover
			color $red

/*
.section-header.fixed .section-header-menu a:hover
	color #000
*/
.section-header-cart
.section-header-auth
	display inline-block
	position absolute
	top 16px
	.icon
		position absolute
		top -3px
		left 0
		margin-right 5px
	.user-name
		padding-right 30px
		text-align center
		@media mobile
			padding-right 0
	.logout
		position absolute
		top 4px
		right 0
		.logout-icon
			display block
			width 25px
			height 5px
			background-color #ee2f24
			border-radius 4px
			&::after,
			&::before
				position absolute
				content ""
				top 0
				right 0
				width 15px
				height 5px
				border-radius 4px
				background-color #ee2f24
			&::after
				top -5px
				transform rotate(45deg)
			&::before
				top 5px
				transform rotate(-45deg)
			@media mobile
				display none
	&:hover
		.logout-icon
			background-color white
			&::after,
			&::before
				background-color white


.section-header-cart a
.section-header-auth a.login
	position relative
	font-size 12px
	text-transform uppercase
	font-weight 700
	padding-left 30px
	.icon
		background-image 0.2s ease-in-out

/*
.section-header.fixed .section-header-cart a:hover
.section-header.fixed .section-header-auth a.login:hover
	color #000
*/
.section-header:not(.fixed) .section-header-cart a:hover .icon
